<script src="//cdn.ckeditor.com/4.11.4/full/ckeditor.js"></script>
<main class="main-content">
    <div id="mainContent">
        <div class="container mt-60">
            <div class="masonry-item col-md-12">
                <div class="card shadow mb-4">
                    <div class="text-center card-header py-3 text-center">
                        <h3 class="" style="font-weight: bold; color: #029a00"><a href="/writer/add-content"></a>POST FORM
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="mt-30">
                            <form onsubmit="return AddNewPost();" id="formAddPost">
                                <div class="form-row">
                                    <div class="form-group col-md-8"><label for="title">
                                            <h4>Title</h4>
                                        </label>
                                        <textarea rows="3" type="text" class="form-control" id="title" name="title"
                                            placeholder="Title of post"></textarea></div>
                                    <div class="form-group col-md-8"><label for="summary_content">
                                            <h4>Summary content</h4>
                                        </label>
                                        <textarea rows="4" type="text" class="form-control" name="summary_content"
                                            id="summary_content" placeholder="Summary content"></textarea>
                                    </div>
                                     <div class="form-group col-md-6"><label for="summary_content">
                                            <h4>Image big size</h4>
                                        </label>
                                        <input type="text" class='form-control' name="avatar" required/>
                                    </div>
                                     <div class="form-group col-md-6"><label for="summary_content">
                                            <h4>Image thumbnail</h4>
                                        </label>
                                        <input type="text" class='form-control' name="thumb_img" required/>
                                    </div>
                                </div>
                        </div>
                        <div class="form-group"><label for="content">
                                <h4>Main content</h4>
                            </label>
                            <textarea rows="100" type="text" class="form-control" name="content" id="content"
                                placeholder="Main content"></textarea></div>
                        <script>
                            CKEDITOR.replace('content');
                            CKEDITOR.config.height = 460;
                        </script>
                        <label for="category">
                            <h4>Category</h4>
                        </label>
                        <select id="category" name="category_id" class="form-control col-md-8" required>
                            <option value="" selected>None</option>
                            {{#each categories}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
                        <h4 class="mt-3">Tags</h4>
                        <div class="aside-widget mt-30">
                            <div class="tags-widget">
                                <ul id="listTags">
                                    {{#each tags}}
                                        <li onclick="ToggleTag({{id}})" class="tag ml-2" id="{{id}}"><a>{{name}}</a></li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div><button type="submit" class="btn btn-success mr-2 ml-2 mb-3">Create new
                        post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</main>

<script>
    var tagsArray = [];

    function TagPostSubmit(id) {
        var tags = document.getElementsByClassName('tag-active');
        for (var i = 0; i < tags.length; i++) {
            tagsArray.push(tags[i].id);
        }
        
        console.log('tag: ');
        console.log(JSON.stringify(tagsArray));
        $.ajax({
            url: '/writer/add-content/taged/' + id,
            method: 'POST',
            dataType: 'json',
            data: JSON.stringify(tagsArray),
            contentType: 'application/json',
            cache: false,
            timeout: 20000,
            complete: () => console.log('POST completed'),
            success: (data) => {
                tagsArray = [];
                console.log(data);
            window.location.replace('/writer/manage-post');
            },
            error: (error) => {
                tagsArray = [];
                console.log('tag error');
                window.location.replace('/writer/manage-post');
            }
        });
    }

    function ToggleTag(id) {
        var tag = (document.getElementById(id));
        if (tag.classList.contains('tag-active')) {
            tag.classList.remove('tag-active');
        }
        else {
            tag.classList.add('tag-active');
        }
    }
    //parse form to json object

    //add new post
    function AddNewPost() {
       var frmUn = $('form').serializeArray();
        var frm = {};
        $.map(frmUn, function (n, i) {
            frm[n['name']] = n['value'];
        });
        var data = CKEDITOR.instances.content.getData();
        frm['content'] = data;
        console.log(data);

        $.ajax({
            url: '/writer/add-content',
            method: 'POST',
            dataType: 'json',
            contentType: 'application/json',
            data: JSON.stringify(frm),
            complete: () => console.log('completed submit form add new post'),
            success: (rs => {
                console.log('add new post success');
                TagPostSubmit(rs);
            }),
            error: (error => {
                console.log(error);
                window.location.replace('/writer/add-content');
            })
        });
        return false;
    }
</script>