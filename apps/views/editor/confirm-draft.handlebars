<main class="main-content bgc-grey-100">
    <div id="mainContent">
        <div class="container-fluid">
            <h1 class="text-black-50 text-center">Confirm Post</h1>

            <form method="POST" action="/editor/confirm-post">
                <div class="form-group">
                    <label for="categories">Edit Category</label>
                    <select class="form-control" id="categories" name="category_id">
                        {{#each categories}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="tags">Edit Tag</label>
                    <select class="form-control" id="tags" name="tag_id">
                        {{#each tags}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="tagspost">Name Tag Post</label>
                    <input type="text" class="form-control" id="tagspost" name="tag_name" aria-describedby="emailHelp"
                        placeholder="Name Tag Post">
                </div>
                <div class="form-group">
                    <label for="postdate">Post Date</label>
                    <input type="datetime-local" class="form_datetime form-control" id="postdate" name="post_date">
                </div>
                          
                <button type="submit" class="btn btn-success form-control">Success</button>
            </form>
        </div>
    </div>
</main>