<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h1 class="text-black-50 text-center">Manage Post</h1>

      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Post table</h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Author Name</th>
                  <th>Title</th>
                  <th>Category Name</th>
                  <th>Created At</th>
                  <th>Edit</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th width='20%'>Author Name</th>
                  <th width='20%'>Title</th>
                  <th width='20%'>Category Name</th>
                  <th width='20%'>Created At</th>
                  <th width='20%'>Edit</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each this.listPosts}}
                <tr>
                  <td>{{username}}</td>
                  <td>{{title}}</td>
                  <td>{{name}}</td>
                  <td>{{moment created_at format="YYYY/MM/DD hh:mm:ss"}}</td>
                  <td class="text-center">                  
                    <a class="btn btn-outline-info" href="/editor/confirm-post?id={{id}}" role="button">
                      <i class="fa fa-eye-slash" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-outline-danger" href="/editor/report-post?id={{id}}" role="button">
                      <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-outline-success" href="/editor/confirm-post?id={{id}}" role="button">
                      <i class="fa fa-check-circle" aria-hidden="true"></i>
                    </a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>