
<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h1 class="table-header text-center">Manage User</h1>

      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">User table</h6>
            <button type="button" class="btn btn-success ml-2"  data-toggle="modal" data-target="#exampleModal"
              data-whatever="@mdo"><i class="fas fa-plus-circle mr-1" style="color:#ffffff;"></i>Add user</button>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New user</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form action="/admin/manage-user/add" method="POST">
                      <label for="recipient-name" class="col-form-label">Name</label>
                      <input type="text" name="name" class="form-control" id="recipient-name" required>
                      <label for="message-text" class="col-form-label">Type</label>
                      <select name="type" id="message-text" class="form-control mb-4" required>
                          <option selected value="2">Child user</option>
                          <option value="1">Parent user</option>
                      </select>
                      <div class="modal-footer mt-2">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Create user</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Username</th>
                  <th>Email</th>
                  <th>Birthday</th>
                  <th>Expiry date</th>
                  <th>Edit</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Birthday</th>
                    <th>Expiry date</th>
                    <th>Edit</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each users}}
                <tr>
                  <td>{{id}}</td>
                  <td>{{username}}</td>
                  <td>{{email}}</td>
                  <td>{{moment birthday format="YYYY/MM/DD h:mm:s"}}</td>
                  <td>{{moment expiry_date format="YYYY/MM/DD h:mm:s"}}</td>
                  <td class="text-center">
                    <button type="button" class="btn btn-cat-control" id="btnCatEdit">
                      <i class="fas fa-pen"></i>
                    </button>
                    <button onclick="functionConfirm({{id}})" type="button" class="btn btn-cat-control" id="btnCatRemove">
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<script type="text/javascript">
    function functionConfirm(id){
        if (confirm("Are you sure delete?")) {
            window.location.replace("/admin/manage-user/delete?id=" + id);
            return true;
        }

        return false;
    }
</script>