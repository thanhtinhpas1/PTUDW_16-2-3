
<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h1 class="text-black-50 text-center">Manage Category</h1>

      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Catgory table</h6>
            <button type="button" class="btn btn-success ml-2"  data-toggle="modal" data-target="#exampleModal"
              data-whatever="@mdo"><i class="fas fa-plus-circle mr-1" style="color:#ffffff;"></i>Add category</button>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form>
                      <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name</label>
                        <input type="text" class="form-control" id="recipient-name">
                      </div>
                      <div class="form-group">
                        <label for="message-text" class="col-form-label">Type</label>
                        <select class="form-control">
                            <option>Parent category</option>
                            <option>Child category</option>
                        </select>
                      </div>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success">Create category</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Created at</th>
                  <th>Updated at</th>
                  <th>Edit</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Created at</th>
                  <th>Edit</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each categories}}
                <tr>
                  <td>{{id}}</td>
                  <td>{{name}}</td>
                  <td>{{created_at}}</td>
                  <td>{{updated_at}}</td>
                  <td class="text-center">
                    <button type="button" class="btn btn-cat-control" id="btnCatEdit">
                      <i class="fas fa-pen"></i>
                    </button>
                    <button onclick="functionConfirm({{id}})" type="button" class="btn btn-cat-control" id="btnCatRemove">
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<script type="text/javascript">
    function functionConfirm(id){
        if (confirm("Are you sure delete?")) {
            window.location.replace("/admin/manage-category/delete?id=" + id);
            return true;
        }

        return false;
    }
</script>