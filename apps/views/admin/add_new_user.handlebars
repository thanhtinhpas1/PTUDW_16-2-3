<main class="main-content">
    <div id="mainContent">
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h1 class="table-header text-center">Manage User</h1>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="username"><b>Username</b></label>
                                <input type="text" class="form-control" name="username" id="username"
                                    placeholder="Username" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="birthday"><b>Password</b></label>
                                <input type="text" class="form-control" id="birthday" name="birthday"
                                    placeholder="01/01/1999" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="email"><b>Email</b></label>
                                <input type="email" class="form-control" id="email" placeholder="Email" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="birthday"><b>Birthday</b></label>
                                <input type="text" class="form-control" id="birthday" placeholder="01/01/1999" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="role_id"><b>Type account</b></label>
                                <select class="form-control" id="role_id" name="role_id" required>
                                    <option value="">None</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="expirydate"><b>Expiry date</b></label>
                                <input type="text" class="form-control" id="expiry_date" placeholder="01/01/1999">
                            </div>
                            <script>
                                $(function () {
                                    $("#datepicker").datepicker();
                                });
                            </script>
                            <div class="form-group col-md-6">
                                <label for="category_id"><b>Category</b></label>
                                <select id="category_id" name="category_id" class="form-control" required>
                                    <option value="">None</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary col-md-8 text-center">Create new user</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>